{
  "name": "@hesabe-pay/direct-apple-pay",
  "version": "1.0.3",
  "description": "Apple Pay integration library for Hesabe payment gateway",
  "main": "dist/hesabe-apple-pay.js",
  "module": "dist/hesabe-apple-pay.esm.js",
  "browser": "dist/hesabe-apple-pay.umd.js",
  "unpkg": "cdn/hesabe-apple-pay.min.js",
  "jsdelivr": "cdn/hesabe-apple-pay.min.js",
  "files": [
    "dist/",
    "cdn/",
    "src/"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:dev": "rollup -c --environment NODE_ENV:development",
    "build:prod": "rollup -c --environment NODE_ENV:production",
    "clean": "rimraf dist cdn",
    "prepublishOnly": "npm run clean && npm run build",
    "publish": "npm publish"
  },
  "keywords": [
    "apple-pay",
    "apple-pay-direct",
    "payment",
    "hesabe",
    "javascript",
    "umd",
    "browser"
  ],
  "author": "salmanhesabe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/salmanhesabe/apple-pay-direct-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "rimraf": "^3.0.2",
    "rollup": "^4.9.6"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
